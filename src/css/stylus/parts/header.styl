#site-container > header
    height: 50px;
    overflow hidden
    font-family: $font-fancy

    @media screen and (min-width: 576px)
        height: 68px;

    @media screen and (min-width: 768px)
        height: 80px;
  
    .logo
        width: 100%
        height 50px
        text-align: center 

        @media screen and (min-width: 576px)
            height: 68px;

        img 
            height 30px
            margin-top 10px
            width: auto

            @media screen and (min-width: 576px)
                height 40px
                margin-top 18px

    nav.navbar
        background-color $color-gold !important
        margin 0
        padding 0
        height: 50px;

        @media screen and (min-width: 576px)
            height: 68px;

        @media screen and (min-width: 768px)
            font-size 1.6rem
            height: 80px;
        
        @media screen and (min-width: 992px)
            font-size 1.8rem

            ul
                li
                    margin 0 10px

                    a
                        font-weight: normal

                        &:hover 
                            font-weight: bold

    #menu-icon
        width 32px
        height 45px
        position absolute
        margin 10px 0 0 15px
        transform rotate(0deg)
        transition .5s ease-in-out
        cursor pointer
        
        span
            display block
            position absolute
            height 4px
            width 100%
            background $color-black
            border-radius 9px
            opacity 1
            left 0
            transform rotate(0deg)
            transition .25s ease-in-out

            &:nth-child(1)
                top 0px
            
            &:nth-child(2), &:nth-child(3)
                top 10px

            &:nth-child(4)
                top 20px


        &.open
            span
                &:nth-child(1)
                    top 10px
                    width 0%
                    left 50%

                &:nth-child(2)
                    transform rotate(45deg)

                &:nth-child(3)
                    transform rotate(-45deg)

                &:nth-child(4)
                    top 10px
                    width 0%
                    left 50%
