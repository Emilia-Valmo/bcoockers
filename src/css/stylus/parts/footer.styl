#site-container > footer
    font-family $font-fancy
    background-color $color-black
    color $color-white
    border-top 1px solid $color-gold
    padding 20px 0
    overflow hidden
    text-align: center

    .logo
        text-align: center
        margin-bottom: 15px;

        img
            max-width: 160px
            opacity 0.8
    
    .liens
        font-family $font-base
        font-size 0.9rem
        color darken($color-white, 30%) 

        span
            color $color-gold

        a
            color darken($color-white, 30%) 

            &:hover
                color $color-gold
    
    .icon-footer img{
        width  : auto;
        height : 25px;
        padding-right: 6px;
        margin-top: 10px;
}