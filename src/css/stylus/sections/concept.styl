// style partie Concept
#concept
  .row
    margin: 0;

#concept .img-thumbnail {
  border: none;
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  border-radius: 0;
}
#concept .container-fluid {
  width: 100%;
  height: 100%;
}
#concept .hovereffect {
  float: center;
  position: relative;
  text-align: center;
  cursor: default;
  display: flex;
}
