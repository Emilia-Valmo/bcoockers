#resa-contact
    background-color: rgb(30,30,30);
    padding 20px 0

    input, textarea, select
        background-color $color-black
        color: $color-gold
        font-family $font-fancy
        font-size 1.2rem
        border 1px solid darken($color-gold, 40%)
        outline none
        margin-top 10px

        &:focus
            border 1px solid $color-gold
            outline none
            box-shadow none

        &:focus::placeholder
            color darken($color-white, 60%)
            
        &::placeholder
            color darken(white, 35%)

    #name, #phone
        margin-top 0

    select
        height 42px

    textarea
        resize none
        margin-bottom 20px

    p
        color darken(white, 35%)
        font-family $font-fancy
        font-size 1.2rem
        margin 25px 0
        height 274px 

        a
            color $color-gold
            font-size 1.5rem
            line-height 50px

    button[type=submit]
        padding 8px 14px
        border 1px solid darken($color-gold, 40%)
        border-radius 10px
        font-size 1.3rem
        font-family $font-fancy
        color $color-gold
        background-color $color-black
        cursor pointer

        &:disabled 
            color gray
            border 1px solid gray
            cursor default

            &:hover
                border 1px solid gray

        &:hover
            border 1px solid $color-gold

        &:focus
            border 1px solid $color-gold
            outline none
            box-shadow none

    iframe
        width 100%
        height 397px

    .invalid-feedback
        padding 5px 5px
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.4)
        font-size 0.9rem

