#blog{
    background-color: #202020;
}

#blog h1{
    font-family $font-fancy
    font-size: 40px;
    color $color-white
    padding-top: 20px;
}

#blog h5{
    font-family $Arial
    font-size: 18px;
    color $color-black;
}

#blog p{
    font-family $Arial
    font-size: 14px;
    color $color-black;
    white-space: initial;
    text-overflow: fade;	
}

#blog a{
    color: white
}

#blog .container-cards{
    background-color: #202020;
    margin-left: 40px;
    margin-right: 40px;
}

#blog .card-deck .card{
    border-color: #8f8547;
}

#blog .card-img-top{
    width: 100%;
    height: 45%;
    overflow: hidden;
}
    
#blog .card-body{
    height : 8rem;
    overflow: hidden;
    padding-bottom: 50px;
    background-color: #F9F9F9;
}

#blog .card-footer{
    padding: 8px;
    background-color: #202020;
    border: 0.5px solid #8f8547;
}

#blog .nav-link{
    color : white;
    margin-bottom: 20px;
    border: 1px solid #8f8547;
    margin-left: 1rem;
    }

#blog .nav-pills .nav-link.active{
    background-color : #8f8547;
}

#blog .hovereffect{
    width:100%;
    float:left;
    overflow:hidden;
    position:relative;
    text-align:center;
    cursor:default;
}

#blog .hovereffect img {
    display:block;
    position:relative;
    -webkit-transition:all .4s linear;
    transition:all .4s linear;
}

#blog .hovereffect:hover img {
    -ms-transform:scale(1.2);
    -webkit-transform:scale(1.2);
    transform:scale(1.2);
}

#blog .media img{
    overflow:hidden;
    border-radius:50px;
    width:100px;
    height:100px;
}

#blog .media{
    margin : 20px 20px;
}

#blog .comments{
    font-size: 14px;
    color : #4A4949;

}

#blog .nom-client{
    color : grey;
    font-size: 13px;
    font-style: italic;
}